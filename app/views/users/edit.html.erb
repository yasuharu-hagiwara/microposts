<h1>edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      <%= f.label :名前 %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.label :地域 %>
      <%= f.text_field :region, class: 'form-control' ,:placeholder=>"任意入力。30文字以内で入力" %>

      <%= f.label :プロフィール %>
      <%= f.text_area :profile, :rows => 2, class: 'form-control' ,:placeholder=>"任意入力。100文字以内で入力" %>

      <%= f.submit "プロフィール更新", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>